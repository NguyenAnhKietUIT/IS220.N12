@{
    ViewBag.Title = "Edit Password";
    var account = Session["Account"] as IS220.N12.Models.ACCOUNT;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/Assets/img/favicon.png" type="image/x-icon" />
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Assets/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/Content/custom/base.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <title>Sign In</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .app__header {
            background: url("../assets/img/background/Sign_Up_page_for_customers.png") top center no-repeat;
            background-size: cover;
            height: 100vh;
            position: relative;
        }

        .form {
            width: 500px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        #logo {
            max-height: 100px;
            margin: auto;
            display: flex;
            flex-direction: column;
        }

        .form-title {
            text-align: center;
            margin-bottom: 12px;
        }

        .form-group {
            margin-bottom: 16px;
        }

        .form-btn {
            width: 100%;
            height: 40px;
            display: block;
            box-shadow: 0 2px 0 rgba(0, 0, 0, 0.035);
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <header class="app__header">
        <div class="container">
            <nav style="height: 100px;" class="position-relative">
                <a href="~/Homepage/Index" class="text-decoration-none">
                    <img src="~/Assets/img/logo.png" alt="Logo" style="height: 100px">
                </a>
                <ul class="list-unstyled position-absolute top-50 end-0 translate-middle-y d-flex" style="font-size: 1.25rem;">
                    <li class="app__nav-item">
                        <a href="~/Homepage/Index" class="app__nav-item-link">Home</a>
                    </li>
                    <li class="app__nav-item">
                        <a href="~/Homepage/Contact" class="app__nav-item-link">Contacts</a>
                    </li>
                    <li class="app__nav-item">
                        <a href="~/CUSTOMER/YourAccount" class="app__nav-item-link">@account.Username</a>
                    </li>
                </ul>
            </nav>
        </div>

        <form action="" method="post" id="form" class="form">
            <img src="../assets/img/favicon.png" id="logo" />

            <h2 class="form-title">Change your password</h2>

            <div class="form-group">
                <input id="old-password" name="old-password" type="password" placeholder="Old your password" class="form-control">
                <span class="form-message"></span>
            </div>

            <div class="form-group">
                <input id="new-password" name="new-password" type="password" placeholder="New your password" class="form-control">
                <span class="form-message"></span>
            </div>

            <div class="form-group">
                <input id="confirm-password" name="confirm-password" type="password" placeholder="Confirm your password" class="form-control">
                <span class="form-message"></span>
            </div>

            <button type="button" class="form-btn btn btn-primary">Continue</button>

        </form>
    </header>

    <script src="~/Assets/js/validator.js"></script>
    <script>
        Validator({
            form: '#form',
            formGroupSelector: '.form-group',
            errorSelector: '.form-message',
            rules: [
                Validator.isRequired('#new-password'),
                Validator.minLength('#new-password', 6),
                Validator.isRequired('#confirm-password'),
                Validator.isConfirmed('#confirm-password', function () {
                    return document.querySelector('#form #new-password').value;
                }, 'Mật khẩu nhập lại không chính xác')
            ],
        });
    </script>
    <script>
        $('#old-password').blur(function () {
            $.ajax({
                type: "POST",
                url: "/ACCOUNT/CheckPasswordExists",
                data: {
                    values: [$(this).val()]
                },
                dataType: "json",
                contentType: 'application/x-www-form-urlencoded',
                success: function (data) {
                    if (!data) {
                        $('#old-password').parent().addClass('invalid');
                        $('#old-password').parent().find('span').append("Old password is wrong");
                    }

                    $('#old-password').focus(function () {
                        $('#old-password').parent().removeClass('invalid');
                        $('#old-password').parent().find('span').html(" ");
                    })
                },
                error: function () {
                    alert("Error occured!!")
                }
            });
        });

        $('.form-btn').click(function () {
            $.ajax({
                type: "POST",
                url: "/ACCOUNT/ChangePassword",
                data: {
                    values: [$('#new-password').val()]
                },
                dataType: "json",
                contentType: 'application/x-www-form-urlencoded',
                success: function (data) {
                    if (data.isSuccess) {
                        alert('Successfull changed!!!')
                        $('#old-password').val("");
                        $('#new-password').val("");
                        $('#confirm-password').val("");
                    }
                },
                error: function () {
                    alert("Error occured!!")
                }
            });
        });
    </script>
</body>
</html>