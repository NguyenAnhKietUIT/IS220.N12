<script>
    Validator({
        form: '#form-detail',
        formGroupSelector: '.form-group',
        errorSelector: '.form-message',
        rules: [
            Validator.isRequired('#yourname'),
            Validator.isRequired('#country'),
            Validator.isRequired('#sex'),
            Validator.isRequired('#phonenumber'),
        ]
    });
</script>

<script>
    $(document).ready(function () {
        if ($('.form-avatar').find('img').attr('alt')) {
            window.location.replace("https://localhost:44306/Homepage/Search_Detail");
        }

        $('.app__sidebar-list .app__sidebar-item:first-child').addClass('app__sidebar-item--active');

        $('.button-handle button:first-child').click(function () {
            $(this).prop('disabled', true);
            $('.button-handle button:last-child').prop('disabled', false);
            $('app__main-input-img').prop('disabled', false);
            $('.edit-active').each(function () {
                $(this).prop('disabled', false);
            });
        });

        $('#app__main-input-img').click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $('.app__main-img').attr('src', fileUrl);
            }
            finder.popup();
        });

        $('.button-handle button:last-child').click(function () {
            $.ajax({
                type: "POST",
                url: "/CUSTOMER/UpdateInformation",
                data: {
                    values: [
                        $('#yourname').val(),
                        $('#country').val(),
                        $('#sex').val(),
                        $('#phonenumber').val(),
                        $('.app__main-img').attr('src'),
                        @account.AccountID
                    ]
                },
                datatype: "json",
                contentType: 'application/x-www-form-urlencoded',
                success: function (data) {
                    if (data.update) {
                        alert("Successfully changed!!!");
                        $('.button-handle button:last-child').prop('disabled', true);
                        $('.button-handle button:first-child').prop('disabled', false);
                    }
                },
                error: function () {
                    alert("Error occured!!!");
                }
            });
        })
    })
</script>