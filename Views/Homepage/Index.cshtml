
@{
    ViewBag.Title = "Trivia";
    Layout = "~/Views/Shared/_Homepage.cshtml";
}

@*Inspiration*@
<link rel="stylesheet" href="~/Content/custom/inspiration.css" />

<style>
    /* Content home */
    .app__selection-item {
        cursor: pointer;
        position: relative;
        transition: transform 0.2s ease-in;
    }

    .app__selection-item:hover {
        transform: scale(1.03);
    }

    .app__selection-item-img {
        width: 280px;
        border-radius: 8px;
        box-shadow: 0 0 2px 2px rgb(0 0 0 / 10%);
    }

    .app__selection-item-desc {
        position: absolute;
        bottom: 20px;
        left: 28px;
        color: #fff;
        font-size: 1.25em;
    }

    /* Background theme */
    .app__background-theme-img {
        width: 100%;
        background-size: cover;
        border-radius: 16px;
    }
</style>

<div class="container">
    <div>
        <div class="mt-5">
            <h3 class="text-center mb-4" style="font-size: 2em; color: #000;">Top Destinations</h3>

            <div class="row">
                <div class="app__selection-item col">
                    <a href="#" class="text-decoration-none">
                        <img src="~/Assets/img/Homepage/hoi_an.png" alt="Hoi An" class="app__selection-item-img">
                        <span class="app__selection-item-desc">Hoi An</span>
                    </a>
                </div>
                <div class="app__selection-item col">
                    <a href="#" class="text-decoration-none">
                        <img src="~/Assets/img/Homepage/ha_giang.png" alt="Ha Giang"
                             class="app__selection-item-img">
                        <span class="app__selection-item-desc">Ha Giang</span>
                    </a>
                </div>
                <div class="app__selection-item col">
                    <a href="#" class="text-decoration-none">
                        <img src="~/Assets/img/Homepage/nha_trang.png" alt="Nha Trang"
                             class="app__selection-item-img">
                        <span class="app__selection-item-desc">Nha Trang</span>
                    </a>
                </div>
                <div class="app__selection-item col">
                    <a href="#" class="text-decoration-none">
                        <img src="~/Assets/img/Homepage/ho_chi_minh.png" alt="Ho Chi Minh"
                             class="app__selection-item-img">
                        <span class="app__selection-item-desc">Ho Chi Minh</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="mt-5">
            <h3 class="text-center mb-4" style="font-size: 2em; color: #000;">Browse by property type</h3>

            <div class="row">
                <div class="app__selection-item col l-3 m-6 c-6">
                    <a href="#" class="text-decoration-none">
                        <img src="~/Assets/img/Homepage/hotels.png" alt="Hotels" class="app__selection-item-img">
                        <span class="app__selection-item-desc">Hotels</span>
                    </a>
                </div>
                <div class="app__selection-item col l-3 m-6 c-6">
                    <a href="#" class="text-decoration-none">
                        <img src="~/Assets/img/Homepage/apartments.png" alt="Apartments"
                             class="app__selection-item-img">
                        <span class="app__selection-item-desc">Apartments</span>
                    </a>
                </div>
                <div class="app__selection-item col l-3 m-6 c-6">
                    <a href="#" class="text-decoration-none">
                        <img src="~/Assets/img/Homepage/resorts.png" alt="Resorts"
                             class="app__selection-item-img">
                        <span class="app__selection-item-desc">Resorts</span>
                    </a>
                </div>
                <div class="app__selection-item col l-3 m-6 c-6">
                    <a href="#" class="text-decoration-none">
                        <img src="~/Assets/img/Homepage/homestay.png" alt="Homestay"
                             class="app__selection-item-img">
                        <span class="app__selection-item-desc">Homestay</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="mt-5 position-relative">
            <a href="#" class="text-decoration-none">
                <img src="~/Assets/img/Homepage/backgroud_theme.png" alt="" class="app__background-theme-img">
                <div class="position-absolute top-50 translate-middle-y" style="left: 80px; color: #fff; line-height: 1.5;">
                    <h3 style="font-size: 3.25em;">Plan your trip with<br> travel expert</h3>
                    <span style="font-size: 2.25em; font-weight: 300;">
                        Our professional advisors can craft your perfect
                        itinerary
                    </span>
                </div>
            </a>
        </div>
    </div>

    <div style="margin-bottom: 80px;">
        <h3 class="text-center mt-5 mb-4" style="font-size: 2em; color: #000;">Get inspiration for your next trip</h3>

        <div class="row">
            <div class="col" style="height: 646px;">
                <a href="#" class="app__inspiration-item">
                    <img src="~/Assets/img/Homepage/india.jpg" alt="Inspiration"
                         class="app__inspiration-item__img" style="height: 556px;">

                    <div class="app__inspiration-item-info">
                        <span class="app__inspiration-item-title">India</span>
                        <span class="app__inspiration-item-desc">Travel community</span>
                        <span class="app__inspiration-item-view">155,073 travelers</span>
                    </div>
                </a>
            </div>

            <div class="col" style="height: 646px;">
                <a href="#" class="app__inspiration-item">
                    <img src="~/Assets/img/Homepage/mountain.jpg" alt="Inspiration"
                         class="app__inspiration-item__img" style="height: 250px;">

                    <div class="app__inspiration-item-info">
                        <span class="app__inspiration-item-title">Mountains</span>
                        <span class="app__inspiration-item-desc">Travel community</span>
                        <span class="app__inspiration-item-view">155,073 travelers</span>
                    </div>
                </a>
                <div class="row mt-3">
                    <div class="col">
                        <a href="#" class="app__inspiration-item">
                            <img src="~/Assets/img/Homepage/beach_1.jpg" alt="Inspiration"
                                 class="app__inspiration-item__img" style="width: 100%; height: 200px;">

                            <div class="app__inspiration-item-info">
                                <span class="app__inspiration-item-title">Beach</span>
                                <span class="app__inspiration-item-desc">Travel community</span>
                                <span class="app__inspiration-item-view">155,073 travelers</span>
                            </div>
                        </a>
                    </div>
                    <div class="col">
                        <a href="#" class="app__inspiration-item">
                            <img src="~/Assets/img/Homepage/beach_2.jpg" alt="Inspiration"
                                 class="app__inspiration-item__img" style="width: 100%; height: 200px;">

                            <div class="app__inspiration-item-info">
                                <span class="app__inspiration-item-title">India</span>
                                <span class="app__inspiration-item-desc">Travel community</span>
                                <span class="app__inspiration-item-view">155,073 travelers</span>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>