@{
    Layout = null;
    var account = Session["Account"] as IS220.N12.Models.ACCOUNT;
    string[] searchProperty = (string[])Session["SearchProperty"];
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/custom/base.css" />
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Assets/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/Content/custom/Search_Detail.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <title>Search_Detail</title>
    <style>
        input[type="range"] {
            position: absolute;
            height: 0;
            width: 0;
            opacity: 0;
            pointer-events: none;
            overflow: hidden;
        }

        .app__navigation.sticky {
            max-width: 1320px;
            border-bottom-left-radius: 4px;
            border-bottom-right-radius: 4px;
        }

            .app__navigation.sticky a:first-child {
                margin-left: 20px;
            }

            .app__navigation.sticky a:last-child {
                margin-right: 20px;
            }

        .app__review-info-point {
            font-size: 24px;
        }

        .app__room-item-img {
            height: 200px;
        }

        .room .col-3:nth-child(n + 5) {
            margin-top: 16px;
        }
    </style>
</head>
<body>
    <header class="app__header">
        <div class="container">
            <nav class="app__nav">
                <a href="Index" class="app__nav-name-link">
                    <img src="../assets/img/logo.png" alt="Logo" class="app__nav-name-icon">
                </a>

                <ul class="app__nav-list">
                    <li class="app__nav-item">
                        <a href="Index" class="app__nav-item-link">Home</a>
                    </li>
                    <li class="app__nav-item">
                        <a href="Contact" class="app__nav-item-link">Contacts</a>
                    </li>
                    <li class="app__nav-item">
                        @if (account != null)
                        {
                            <a href="~/CUSTOMER/YourAccount" class="app__nav-item-link">@account.Username</a>
                        }
                        else
                        {
                            <a href="~/ACCOUNT/SignUpCustomer" class="app__nav-item-link">Sign Up</a>
                        }
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <div class="container">
        <div class="app__property-img"></div>

        <nav class="app__navigation">
            <a href="#app__overview" class="nav-active">Overview</a>
            <a href="#app__room">Room</a>
            <a href="#app__information">Information</a>
            <a href="#app__review">Review</a>
        </nav>

        <div class="app__title">
            <h1>@searchProperty[1]</h1>
            <span></span>
        </div>

        <div id="app__overview">
            <h3>Overview</h3>
            <p style="text-align: justify;">Luxury hotel with 1 outdoor pools, connected to a shopping centre, near Giac Lam Pagoda</p>
        </div>

        <div class="d-flex justify-content-around align-items-center"
             style="height: 60px;
                    margin-top: 64px;
                    border-radius: 12px;
                    box-shadow: 0 0 2px 2px rgb(0 0 0 / 5%);">
            <div class="py-1 position-relative" style="width: 140px;">
                <div class="d-flex align-items-center">
                    <i class="pe-2 fa-solid fa-plane-departure"></i>
                    <input type="date" name="check-in-date" id="app__check-in" class="d-block"
                           min="@searchProperty[2]" max="2050-12-31" value="@searchProperty[2]">
                </div>
                <p class="position-absolute toast-message-in p-1 text-center">
                    The maximum interval between two
                    days is thirty
                </p>
            </div>
            <div class="py-1 position-relative" style="width: 140px;">
                <div class="d-flex align-items-center">
                    <i class="pe-2 fa-solid fa-money-check"></i>
                    <input type="date" name="check-out-date" id="app__check-out" class="d-block"
                           min="@searchProperty[2]" max="2050-12-31" value="@searchProperty[3]">
                </div>
                <p class="position-absolute toast-message-out p-1 text-center">
                    The maximum interval between two
                    days is thirty
                </p>
            </div>
            <div class="d-flex py-1 position-relative">
                <div class="d-flex align-items-center">
                    <i class="pe-2 fa-solid fa-people-group"></i>
                    <div class="app__search-quantity">
                        <span>@searchProperty[4]</span>
                        bed,
                        <span>@searchProperty[5]</span>
                        adults
                    </div>
                </div>

                <div class="box-quantity">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <input type="range" name="bed-num" id="bed-num" min="1" max="30" step="1" value="@searchProperty[4]">
                        <div class="">
                            <label for="bed-num">Beds</label>
                        </div>
                        <div class="d-flex justify-content-between align-items-center" style="width: 110px;">
                            <button type="button" class="btn-minus-bed">-</button>
                            <span class="amount-bed">@searchProperty[4]</span>
                            <button type="button" class="btn-add-bed">+</button>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <input type="range" name="per-num" id="per-num" min="1" step="1" value="@searchProperty[5]">
                        <div class="">
                            <label for="per-num">Adults</label>
                        </div>
                        <div class="d-flex justify-content-between align-items-center" style="width: 110px;">
                            <button type="button" class="btn-minus-people">-</button>
                            <span class="amount-people">@searchProperty[5]</span>
                            <button type="button" class="btn-add-people">+</button>
                        </div>
                    </div>
                    <button type="button" class="btn-accept">Accept</button>
                </div>
            </div>
            <div class="d-flex py-1">
                <button type="button" class="app__search-btn">Search</button>
            </div>
        </div>

        <div id="app__room">
            <h3>Room</h3>
            <div class="row room"></div>
        </div>

        <div id="app__information">
            <h3>Information</h3>

            <div class="app__information-item">
                <h4>Check-in/Check-out time</h4>
                <p class="time"></p>
            </div>

            <div class="app__information-item">
                <h4>Services</h4>
                <div class="row">
                    <div class="col first-list"></div>
                    <div class="col second-list"></div>
                    <div class="col third-list"></div>
                    <div class="col final-list"></div>
                </div>
            </div>

            <div class="app__information-item">
                <h4>Location</h4>
                <p class="text-justify location"></p>
                <div class="map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.537518774658!2d106.68078051458896!3d10.770081792325838!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f223b48af69%3A0x49c2aebea46b1ab1!2zNDUzLzE2IE5ndXnhu4VuIMSQw6xuaCBDaGnhu4N1LCBQaMaw4budbmcgNSwgUXXhuq1uIDMsIFRow6BuaCBwaOG7kSBI4buTIENow60gTWluaCwgVmlldG5hbQ!5e0!3m2!1sen!2s!4v1670094886989!5m2!1sen!2s"
                            width="1272"
                            height="300"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
        </div>

        <div id="app__review">
            <h3>Review</h3>
            <div>
                <div class="app__review-info">
                    <div class="app__review-info-title">
                        <span class="app__review-info-point"></span>
                    </div>
                    <p class="app__review-info-item">
                        <i class="fa-solid fa-earth-americas"></i>
                        <span></span>
                    </p>
                </div>

                <div class="app__review-comment">
                    <p style="text-align: justify;"></p>
                    <span></span>
                </div>
            </div>
        </div>
    </div>

    <footer class="app__footer">
        <div class="container">
            <div class="app__footer-contact">
                <h3 class="app__footer-contact-title">
                    Enter your e-mail address and get<br> notified of exclusive offers
                </h3>

                <div class="app__footer-contact-input">
                    <div class="app__footer-input">
                        <input type="text" placeholder="Your e-mail address">
                    </div>

                    <div class="app__footer-btn">
                        <a href="#" class="app__search-btn btn-footer">Get Started</a>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col l-2-4 m-2-4 c-4">
                    <a href="#" class="app__nav-name-link">
                        <img src="../assets/img/logo.png" alt="Logo" class="app__nav-name-icon">
                    </a>
                </div>
                <div class="col l-2-4 m-2-4 c-4">
                    <ul class="app__footer-list">
                        <li class="app__footer-list-item">
                            <a href="#" class="app__footer-list-item-link">About us</a>
                        </li>
                        <li class="app__footer-list-item">
                            <a href="#" class="app__footer-list-item-link">Newsletter</a>
                        </li>
                        <li class="app__footer-list-item">
                            <a href="#" class="app__footer-list-item-link">Careers</a>
                        </li>
                        <li class="app__footer-list-item">
                            <a href="#" class="app__footer-list-item-link">Blog</a>
                        </li>
                    </ul>
                </div>
                <div class="col l-2-4 m-2-4 c-4">
                    <ul class="app__footer-list">
                        <li class="app__footer-list-item">
                            <a href="#" class="app__footer-list-item-link">Community</a>
                        </li>
                        <li class="app__footer-list-item">
                            <a href="#" class="app__footer-list-item-link">Trivia Community</a>
                        </li>
                    </ul>
                </div>
                <div class="col l-2-4 m-2-4 c-4 mobile-offset-4">
                    <ul class="app__footer-list">
                        <li class="app__footer-list-item">
                            <a href="#" class="app__footer-list-item-link">Support</a>
                        </li>
                        <li class="app__footer-list-item">
                            <a href="#" class="app__footer-list-item-link">Help Centre</a>
                        </li>
                        <li class="app__footer-list-item">
                            <a href="#" class="app__footer-list-item-link">Safety Information</a>
                        </li>
                    </ul>
                </div>
                <div class="col l-2-4 m-2-4 c-4">
                    <ul class="app__footer-list">
                        <li class="app__footer-list-item">
                            <a href="#" class="app__footer-list-item-link">Hedge Karla</a>
                        </li>
                        <li class="app__footer-list-item">
                            <a href="#" class="app__footer-list-item-link">Mullein abc</a>
                        </li>
                        <li class="app__footer-list-item">
                            <a href="#" class="app__footer-list-item-link">Autumnal Bulgier</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="app__footer-socials">
                <ul class="app__footer-socials-list">
                    <li class="app__footer-socials-item">
                        <a href="#" class="app__footer-socials-item-link">
                            <i class="app__footer-socials-item-icon fa-brands fa-square-instagram"></i>
                        </a>
                    </li>
                    <li class="app__footer-socials-item">
                        <a href="#" class="app__footer-socials-item-link">
                            <i class="app__footer-socials-item-icon fa-brands fa-twitter"></i>
                        </a>
                    </li>
                    <li class="app__footer-socials-item">
                        <a href="#" class="app__footer-socials-item-link">
                            <i class="app__footer-socials-item-icon fa-brands fa-youtube"></i>
                        </a>
                    </li>
                    <li class="app__footer-socials-item">
                        <a href="#" class="app__footer-socials-item-link">
                            <i class="app__footer-socials-item-icon fa-brands fa-square-facebook"></i>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="app__footer-copyright">
                Copyright &copy; 2022 Alien
            </div>
        </div>
    </footer>

    <script src="~/Scripts/custom/Search_Property.js"></script>
    <script>
        $(document).ready(function () {
            //Get image property
            $.ajax({
                type: "POST",
                url: "/Homepage/GetImageProperty",
                data: {
                    values: [@searchProperty[0]]
                },
                datatype: "json",
                contentType: 'application/x-www-form-urlencoded',
                success: function (data) {
                    let html = `
                                <img src="${data.images[0]}" alt="Image Property" class="app__list-img-item">

                                <div>
                                    <div>
                                        <img src="${data.images[1]}" alt="Image Property"
                                             class="app__list-img-item">
                                        <img src="${data.images[2]}" alt="Image Property"
                                             class="app__list-img-item">
                                    </div>
                                    <div>
                                        <img src="${data.images[3]}" alt="Image Property"
                                             class="app__list-img-item">
                                        <img src="${data.images[4]}" alt="Image Property"
                                             class="app__list-img-item">
                                    </div>
                                </div>`;

                    $('.app__property-img').append(html);
                },
                error: function () {
                    alert("Error occured!!!");
                }
            });

            //Get information property
            $.ajax({
                type: "POST",
                url: "/Homepage/GetInformationProperty",
                data: {
                    values: [@searchProperty[0]]
                },
                datatype: "json",
                contentType: 'application/x-www-form-urlencoded',
                success: function (data) {
                    $('.app__title').find('span').html(`Average point: ${data.averagePoint}`);
                    $('#app__overview').find('p').html(data.overview);
                    $('.time').html(`<p>Check-in from: ${data.checkInTime}<br> Check-out until: ${data.checkOutTime}</p>`);
                    let html1 = "";
                    let html2 = "";
                    let html3 = "";
                    let html4 = "";
                    for (let i = 0; i < data.serviceNames.length; i++) {
                        if (i < 5) {
                            html1 += `
                                <p>
                                    <i class="fa-solid fa-check"></i>
                                    ${data.serviceNames[i]}
                                </p>`;
                        } else if (i >= 5 && i < 10) {
                            html2 += `
                                <p>
                                    <i class="fa-solid fa-check"></i>
                                    ${data.serviceNames[i]}
                                </p>`;
                        } else if (i >= 10 && i < 15) {
                            html3 += `
                                <p>
                                    <i class="fa-solid fa-check"></i>
                                    ${data.serviceNames[i]}
                                </p>`;
                        } else {
                            html4 += `
                                <p>
                                    <i class="fa-solid fa-check"></i>
                                    ${data.serviceNames[i]}
                                </p>`;
                        }
                    }
                    $('.first-list').html(html1);
                    $('.second-list').html(html2);
                    $('.third-list').html(html3);
                    $('.final-list').html(html4);
                    $('.location').html(data.location);
                    $('.app__review-info-point').html(`Evaluate point: ${data.point}`);
                    $('.app__review-info-item').find('span').html(`<b>${data.name}</b> from ${data.country}`);
                    $('.app__review-comment').find('p').html(data.content);
                    $('.app__review-comment').find('span').html(`Reviewed ${data.time}`);
                },
                error: function () {
                    alert("Error occured!!!");
                }
            });

            var array = [
                @searchProperty[0],
                $('#app__check-in').val(),
                $('#app__check-out').val(),
                $('#bed-num').val(),
            ];

            //Get Room
            function getRooms(array) {
                $.ajax({
                type: "POST",
                url: "/Homepage/GetDataRoom",
                data: {
                    values: array
                },
                datatype: "json",
                contentType: 'application/x-www-form-urlencoded',
                success: function (data) {
                    let html = "";
                    for (let i = 0; i < data.roomList.length; i++) {
                        html += `
                                <div class="col-3">
                                    <div class="app__room-item">
                                        <img src="${data.roomList[i].Image_Room}" alt="${data.roomList[i].RoomID}" class="app__room-item-img">
                                        <div class="app__room-item-main">
                                            <h4>${data.roomList[i].RoomName}</h4>
                                            <p class="app__room-item-type">${data.roomList[i].TypeOfRoom}</p>
                                            <p class="app__room-item-request">
                                                <i class="fa-solid fa-bed"></i>
                                                <span>${data.roomList[i].BedNum} bed</span>
                                            </p>
                                            <p class="app__room-item-request">
                                                <i class="fa-solid fa-check"></i>
                                                <span>Reserve now, pay later</span>
                                            </p>
                                        </div>
                                        <div class="app__room-item-reserve">
                                            <div class="d-flex justify-content-between" style="font-size: 12px;">
                                                <span>for 1 night <br> includes taxes & fees</span>
                                                <span class="text-danger d-none" style="flex: 1;text-align: right;">Please login to make a reservation</span>
                                            </div>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <p class="app__room-item-price">${parseInt(data.roomList[i].Price)} VND</p>
                                                <div class="app__room-item-action">
                                                    <button type="button" class="btn-reserve"
                                                            style="padding: 8px 16px;
                                                                    border: none;
                                                                    outline: none;">
                                                        Reserve
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>`;
                    };
                    $('.room').html(html);
                },
                error: function () {
                    alert("Error occured!!!");
                    }
            });
            };

            getRooms(array);

            $('.app__search-btn').click(function () {
                array = [
                    @searchProperty[0],
                    $('#app__check-in').val(),
                    $('#app__check-out').val(),
                    $('#bed-num').val(),
                ];

                getRooms(array);
            });

            $('.room').on('click', 'button', function () {
                let statusLogin = $('.app__nav-list .app__nav-item:last-child .app__nav-item-link').html();

                if (statusLogin === "Sign Up") {
                    $(this).parent().parent().parent().find('span:last-child').removeClass('d-none');

                    setTimeout(() => {
                        window.location.replace("https://localhost:44306/ACCOUNT/SignIn");
                    }, "1500");
                }
            })
        });
    </script>
</body>
</html>
