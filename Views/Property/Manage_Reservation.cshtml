
@{
    ViewBag.Title = "Manage_Reservation";
    Layout = "~/Views/Shared/_PropertyLayout.cshtml";
}

<style>
    .app__content-nav-item:nth-child(3) {
        color: black;
        border-bottom: 4px solid #000;
    }

    .app__form-filter label {
        font-weight: 600;
    }

    .app__form-filter select,
    .app__form-filter input {
        height: 32px;
        padding-left: 8px;
    }

    .app__form-filter > input[type="date"]::-webkit-calendar-picker-indicator {
        cursor: pointer;
    }

    input[type=search]::-webkit-search-cancel-button {
        cursor: pointer;
    }

    .app__form-filter + .app__form-filter {
        margin-left: 16px;
    }

    #input-search {
        padding: 0 8px;
        width: 300px;
        outline: none;
    }

    th, td {
        padding: 4px 8px;
    }

        th:not(th:first-child),
        td:not(td:first-child) {
            text-align: center;
        }

    .table-bordered > :not(caption) > *,
    .table-bordered > :not(caption) > * > * {
        border-width: 1px;
    }
</style>

<div class="container">
    <div class="app__content-main">
        <div class="d-flex pb-4 border-bottom">
            <div class="app__form-filter d-flex flex-column">
                <label for="select-date">Date of</label>
                <select name="select-date" id="select-date">
                    <option value="0">Check in</option>
                    <option value="1">Check out</option>
                </select>
            </div>
            <div class="app__form-filter d-flex flex-column">
                <label for="check-in">From</label>
                <input type="date" name="check-in" id="check-in">
            </div>
            <div class="app__form-filter d-flex flex-column">
                <label for="check-out">Until</label>
                <input type="date" name="check-out" id="check-out">
            </div>
            <div class="app__form-filter d-flex flex-column">
                <label for="input-search">Search</label>
                <input type="search" name="input-search" id="input-search"
                       placeholder="Keywords (optional)">
            </div>
            <button type="button" class="btn btn-secondary ms-3" style="height: 36px; margin-top: 20px;">Filter</button>
        </div>

        <table class="mt-3 w-100 table-striped table-hover table-bordered">
            <tr>
                <th>Reservation number</th>
                <th>Check in</th>
                <th>Check out</th>
                <th>Types of room</th>
                <th>Status</th>
                <th>Total price</th>
                <th>Edit</th>
            </tr>
        </table>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $.ajax({
            type: "POST",
            url: "/Property/GetReservation",
            data: {},
            datatype: "json",
            contentType: 'application/x-www-form-urlencoded',
            success: function (data) {
                let html = "";

                for (let i = 0; i < data.reservationIDs.length; i++) {
                    html += `
                            <tr>
                                <td>
                                    <p>${data.reservationIDs[i]}</p>
                                    <span style="font-size: 12px;">${data.bedNums[i]} beds</span>
                                </td>
                                <td>${data.checkIns[i]}</td>
                                <td>${data.checkOuts[i]}</td>
                                <td>${data.typeRooms[i]}</td>
                                <td>
                                    <select name="select-status" id="select-status" disabled>`;

                    switch (data.status[i]) {
                        case 1: {
                            html += `<option value="1" selected>Booked</option>
                                    <option value="2">Checked out</option>
                                    <option value="3">Live in</option>
                                    <option value="4">Canceled</option>
                                    <option value="5">No show</option>`;
                            break;
                        }
                        case 2: {
                            html += `<option value="1">Booked</option>
                                    <option value="2" selected>Checked out</option>
                                    <option value="3">Live in</option>
                                    <option value="4">Canceled</option>
                                    <option value="5">No show</option>`;
                            break;
                        }
                        case 3: {
                            html += `<option value="1">Booked</option>
                                    <option value="2">Checked out</option>
                                    <option value="3" selected>Live in</option>
                                    <option value="4">Canceled</option>
                                    <option value="5">No show</option>`;
                            break;
                        }
                        case 4: {
                            html += `<option value="1">Booked</option>
                                    <option value="2">Checked out</option>
                                    <option value="3">Live in</option>
                                    <option value="4" selected>Canceled</option>
                                    <option value="5">No show</option>`;
                            break;
                        }
                        case 5: {
                            html += `<option value="1">Booked</option>
                                    <option value="2">Checked out</option>
                                    <option value="3">Live in</option>
                                    <option value="4">Canceled</option>
                                    <option value="5" selected>No show</option>`;
                            break;
                        }
                    }

                    html += `</select>
                        </td>
                        <td>${data.totals[i]} VND</td>
                        <td>
                            <button class="btn btn-info">
                                Edit status
                            </button>

                            <button class="ms-3 btn btn-success" disabled>
                                Success
                            </button>
                        </td>
                    </tr>`;
                }

                $('table').append(html);
            },
            error: function () {
                alert("Error occured!!!");
            }
        });

        $('table').on('click', '.btn.btn-info', function () {
            $(this).prop('disabled', true);
            $(this).parent().find('button.btn.btn-success').prop('disabled', false);
            $(this).parent().parent().find('td').eq(5).find('select').prop('disabled', false);
        });

        $('table').on('click', '.btn.btn-success', function () {
            $.ajax({
                type: "POST",
                url: "/Property/UpdateStatus",
                data: {
                    values: [
                        $(this).parent().parent().find('td').eq(0).find('p').html(),
                        $(this).parent().parent().find('td').eq(5).find('select').find(':selected').val()
                    ]
                },
                datatype: "json",
                contentType: 'application/x-www-form-urlencoded',
                success: function (data) {
                    if (data.isSuccess) {
                        alert('Successfully changed!!!');
                        location.reload();
                    }
                },
                error: function () {
                    alert("Error occured!!!");
                }
            });
        });

        $('.btn.btn-secondary').click(function () {
            let type = $('#input-search').val();
            let from = $('#check-in').val();
            let until = $('#check-out').val();
            var choice = $('#select-date').find(':selected').val();

            function search(name, array) {
                $.ajax({
                    type: "POST",
                    url: `/Property/${name}`,
                    data: {
                        values: array
                    },
                    datatype: "json",
                    contentType: 'application/x-www-form-urlencoded',
                    success: function (data) {
                        let html = `<tr>
                                        <th>Reservation number</th>
                                        <th>Check in</th>
                                        <th>Check out</th>
                                        <th>Types of room</th>
                                        <th>Status</th>
                                        <th>Total price</th>
                                        <th>Edit</th>
                                    </tr>`;

                        for (let i = 0; i < data.reservationIDs.length; i++) {
                            html += `
                            <tr>
                                <td>
                                    <p>${data.reservationIDs[i]}</p>
                                    <span style="font-size: 12px;">${data.bedNums[i]} beds</span>
                                </td>
                                <td>${data.checkIns[i]}</td>
                                <td>${data.checkOuts[i]}</td>
                                <td>${data.typeRooms[i]}</td>
                                <td>
                                    <select name="select-status" id="select-status" disabled>`;

                            switch (data.status[i]) {
                                case 1: {
                                    html += `<option value="1" selected>Booked</option>
                                    <option value="2">Checked out</option>
                                    <option value="3">Live in</option>
                                    <option value="4">Canceled</option>
                                    <option value="5">No show</option>`;
                                    break;
                                }
                                case 2: {
                                    html += `<option value="1">Booked</option>
                                    <option value="2" selected>Checked out</option>
                                    <option value="3">Live in</option>
                                    <option value="4">Canceled</option>
                                    <option value="5">No show</option>`;
                                    break;
                                }
                                case 3: {
                                    html += `<option value="1">Booked</option>
                                    <option value="2">Checked out</option>
                                    <option value="3" selected>Live in</option>
                                    <option value="4">Canceled</option>
                                    <option value="5">No show</option>`;
                                    break;
                                }
                                case 4: {
                                    html += `<option value="1">Booked</option>
                                    <option value="2">Checked out</option>
                                    <option value="3">Live in</option>
                                    <option value="4" selected>Canceled</option>
                                    <option value="5">No show</option>`;
                                    break;
                                }
                                case 5: {
                                    html += `<option value="1">Booked</option>
                                    <option value="2">Checked out</option>
                                    <option value="3">Live in</option>
                                    <option value="4">Canceled</option>
                                    <option value="5" selected>No show</option>`;
                                    break;
                                }
                            }

                            html += `</select>
                        </td>
                        <td>${data.totals[i]} VND</td>
                        <td>
                            <button class="btn btn-info">
                                Edit status
                            </button>

                            <button class="ms-3 btn btn-success" disabled>
                                Success
                            </button>
                        </td>
                    </tr>`;
                        }

                        $('table').html(html);
                    },
                    error: function () {
                        alert("Error occured!!!");
                    }
                });
            }

            if (type === "") {
                search('SearchBasic', [choice, from, until]);
            } else {
                search('SearchByType', [choice, from, until, type]);
            }
        });
    })
</script>