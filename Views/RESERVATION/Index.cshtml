
@{
    ViewBag.Title = "Reservation";
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../assets/css/base.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/Content/custom/Reservation.css">
    <link rel="stylesheet" href="~/Content/Homepage.css">
    <title>Reservation</title>
</head>

<body>
    <div id="app">
        <header class="app__header">
            <div class="container">
                <nav style="height: 90px" class="position-relative">
                    <a href="~/Homepage/Index" class="text-decoration-none">
                        <img src="~/Assets/img/logo.png" alt="Logo" style="height: 100px">
                    </a>
                    <ul class="list-unstyled position-absolute top-50 end-0 translate-middle-y d-flex" style="font-size: 1.25rem;">
                        <li class="app__nav-item">
                            <a href="~/Homepage/Index" class="app__nav-item-link">Home</a>
                        </li>
                        <li class="app__nav-item">
                            <a href="#" class="app__nav-item-link">Manage Your Stay</a>
                        </li>
                        <li class="app__nav-item">
                            <a href="#" class="app__nav-item-link">Contacts</a>
                        </li>
                        <li class="app__nav-item">
                            <a href="~/ACCOUNT/signUpCustomer" class="app__nav-item-link">Sign Up</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </header>

        <div class="app__content mt-5" style="max-width: 1200px;margin: 0 auto;">
            <div class="row">
                <div class="col-4">
                    <div class="border" style="border-radius: 16px;">
                        <div class="m-4 d-flex flex-column justify-content-between">
                            <h5>Your booking details</h5>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <div>
                                    <p>Check-in</p>
                                    <h6>Thu 22 Dec 2022</h6>
                                    <p style="font-size: 12px;">12:30</p>
                                </div>

                                <div>
                                    <p>Check-out</p>
                                    <h6>Fri 23 Dec 2022</h6>
                                    <p style="font-size: 12px;">6:00</p>
                                </div>
                            </div>
                            <div class="mt-4">
                                <h6>Total length of stay:</h6>
                                <p>1 night</p>
                            </div>
                            <div class="mt-4">
                                <h6>You selected</h6>
                                <p>Deluxe Apartment</p>
                            </div>
                        </div>
                    </div>
                    <div class="border mt-4" style="border-radius: 16px;">
                        <div class="m-4 d-flex flex-column justify-content-between">
                            <h5>Your price summary</h5>
                            <div class="mt-3 d-flex justify-content-between">
                                <span>Room name</span>
                                <span>400000 VND</span>
                            </div>
                            <div class="mt-1 d-flex justify-content-between pb-3 border-bottom">
                                <span>8% VAT</span>
                                <span>32000 VND</span>
                            </div>
                            <div class="mt-1 d-flex justify-content-between">
                                <h6>Total</h6>
                                <span>432000 VND</span>
                            </div>
                        </div>
                    </div>
                    <div class="border mt-4" style="border-radius: 16px;">
                        <div class="m-4 d-flex flex-column justify-content-between">
                            <h5>Payment method</h5>
                            <p>At the property</p>
                        </div>
                    </div>
                </div>
                <div class="col-8">
                    <div class="d-flex border" style="border-radius: 16px;">
                        <img src="~/Assets/img/others/mother_home.png" alt="Avatar" class="property-img">
                        <div class="d-flex flex-column m-3 flex-1">
                            <h5>Property Name</h5>
                            <p class="mb-1">Address</p>
                            <p style="flex: 1;">9.0</p>
                        </div>
                    </div>

                    <div class="border mt-5" style="border-radius: 16px;">
                        <div class="m-4 d-flex flex-column justify-content-between">
                            <h5>Enter your stay details</h5>

                            <form action="" method="post" id="form">
                                <div class="form-group">
                                    <label for="name"><b>Name</b><span style="color: red;">*</span></label>
                                    <input id="name" name="name" type="text" class="form-control mt-2">
                                    <span class="form-message"></span>
                                </div>

                                <div class="form-group">
                                    <label for="phone-number"><b>Phone numbers</b><span style="color: red;">*</span></label>
                                    <input id="phone-number" name="phone-number" type="text" class="form-control mt-2">
                                    <span class="form-message"></span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4 mb-5 d-flex">
                <div style="flex: 1;"></div>
                <a href="./Search_Property.html" class="text-decoration-none">
                    <button>Cancel</button>
                </a>

                <a href="#" class="text-decoration-none ms-3">
                    <button>Complete Your Booking</button>
                </a>
            </div>
        </div>
    </div>

    <script src="../assets/js/validator.js"></script>
    <script>
        Validator({
            form: '#form',
            formGroupSelector: '.form-group',
            errorSelector: '.form-message',
            rules: [
                Validator.isRequired('#name'),
                Validator.isRequired('#phone-number'),
            ]
        });
    </script>
</body>

</html>